{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": false, // Desabilitado para produção
    "removeComments": true // Remove comentários para otimizar
  },
  "include": [
    "src/**/*"
  ], // Inclui todos os arquivos dentro da pasta src
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ] // Exclui testes e node_modules
}